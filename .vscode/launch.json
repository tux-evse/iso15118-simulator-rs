{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "iso-2",
            "type": "lldb",
            "preLaunchTask": "binding-native-build",
            "request": "launch",
            "program": "afb-binder",
            "env": {
                "LD_LIBRARY_PATH": "/usr/local/lib64",
                "IFACE_SIMU": "simu-veth",
                "PKI_TLS_DIR": "../iso15118-binding-rs/afb-test/certs"
            },
            "args": [
                "-v",
                "--monitoring",
                "--trap-faults=0",
                "--config=iso15118-2/etc/binding-iso2.yaml",
            ],
            "cwd": "${workspaceFolder}",
            "initCommands": [
                "target stop-hook add -n _start -o continue",
                "settings set target.disable-aslr false"
            ]
        },
                {
            "name": "pcap-tls-1.3",
            "type": "lldb",
            "preLaunchTask": "binding-native-build",
            "request": "launch",
            "program": "${env:HOME}/.cargo/build/debug/pcap-iso15118",
            "env": {
                "LD_LIBRARY_PATH": "/usr/local/lib64:/usr/local/lib",
            },
            "args": [
                "--pcapfile=../iso15118-binding-rs/afb-test/trace-logs/hello-tls-1.3.pcapng",
                "--psklog=../iso15118-binding-rs/afb-test/trace-logs/hello-tls-1.3.keylog",
                "--tcpport=53537",
                "--verbose=1",
                "--logfile=/tmp/iso15118-scenario.json",
            ],
            "cwd": "${workspaceFolder}",
            "initCommands": [
                "target stop-hook add -n _start -o continue",
                "settings set target.disable-aslr false"
            ]
        },
    ]
}
